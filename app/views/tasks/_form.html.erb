<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
   
   <br>
  <div>
    <strong><%= form.label :todo_list_id, style: "display: block" %></strong>
    <%= form.collection_select(:todo_list_id, TodoList.all, :id, :name, {prompt:'Select'}, {class:'form-control'}) %>
  </div>
   
   <br>
  <div>
    <strong><%= form.label :name, style: "display: block" %></strong>
    <%= form.text_field :name, class:'form-control' %>
  </div>
   <br>
  <div>
    <strong><%= form.label :completed, style: "display: block" %></strong>
    <%= form.check_box :completed %>
  </div>
   
   <br>
  <div>
    <strong><%= form.label :due, style: "display: block" %></strong>
    <%= form.date_field :due, class:'form-control' %>
  </div>
  
   <br>
  <div>
    <%= form.submit nil, class:'btn btn-success btn-sm'%>
  </div>
<% end %>
