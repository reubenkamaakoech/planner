<p>
  <strong>Todo List:</strong>
  <%= @task.todo_list.name %>
</p>

<p>
  <strong>Task Name:</strong>
  <%= @task.name %>
</p>

<p>
  <strong>Completed:</strong>
  <%= @task.completed %>
</p>

<p>
  <strong>Due:</strong>
  <%= @task.due %>
</p>

<div>
  <%= link_to "Edit", edit_task_path(@task), class:'btn btn-warning btn-sm' %> |
  <%= link_to "Back", tasks_path, class:'btn btn-primary btn-sm' %>
</div>

<br>
<div>
  <%= link_to "Delete", @task, data: { turbo_method: "delete", turbo_confirm: "Are you sure?"}, class:"btn btn-danger btn-sm" %>
</div>
