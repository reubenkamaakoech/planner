<table class='table table-striped'>
    <thead>
      <tr>
        <th>#</th>
        <th>Todo List:</th>
      </tr>
    <thead>
    <tbody>
     <% @todo_lists.each do |todo_list|%>
      <tr>
        <td><%= todo_list.id %></td>
        <td><%= todo_list.name %></td>
        <td><%= link_to "Show", todo_list, class:'btn btn-primary btn-sm' %></td>
        <td><%= link_to "Delete", todo_list_path(todo_list), data: { turbo_method: "delete", turbo_confirm: "Are you sure?"}, class:"btn btn-danger btn-sm" %></td>
      </tr>
     <% end %>
    </tbody>
  </table>
  

