<%= form_with(model: todo_list) do |form| %>
  <% if todo_list.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(todo_list.errors.count, "error") %> prohibited this todo_list from being saved:</h2>

      <ul>
        <% todo_list.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
   
   <br>
  <div>
    <strong><%= form.label :name, style: "display: block" %></strong>
    <%= form.text_field :name, class:'form-control' %>
  </div>
   
   <br>
  <table class='table table-striped'>
  <thead>
   <tr>
    <th></th>
    <th>Task Name</th>
    <th>Completed</th>
    <th>Due</th>
   </tr>
  </thead>
  <tbody class="fields">   
      <%= form.fields_for :tasks do |builder| %> 
      <%= render 'task', form: builder %>
     <% end %>
  </tbody>
 </table>


  <div class="form-actions">
    <%= form.submit nil, class:'btn btn-success btn-sm' %> |
    <%= link_to_add_row('Add Task', form, :tasks, class:"btn btn-primary") %>
  </div>
<% end %>
